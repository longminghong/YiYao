<Window x:Class="YiYao.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YiYao"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" ResizeMode="NoResize" WindowStyle="None" Background="{x:Null}">
    <Viewbox Stretch="Fill">
        <Canvas Width="1920" Height="1080">
            <local:NavigationManager  Width="1920" Height="1080" x:Name="root">
                <TextBlock x:Name="debug" FontSize="18" Foreground="Red" Canvas.Left="100" Canvas.Top="100"  />
            </local:NavigationManager>
            <TextBlock x:Name="messageText" Foreground="White" Width="100" FontSize="20" Height="50" TextAlignment="Center" Padding="0,10,0,0" IsHitTestVisible="False" Canvas.Left="900" Canvas.Top="921" Visibility="Collapsed">
               网络异常
            </TextBlock>
        </Canvas>
    </Viewbox>
</Window>
